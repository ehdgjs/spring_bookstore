{{>layout/header}}
{{>layout/nav}}
<div class="container col-md-4">
        <div class="input-group mb-3">
            <input class="form-control" type="text" id="search" placeholder="검색어를 입력해주세요."/>
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button" id="btn-searchBook">검색</button>
            </div>
        </div>
</div>
<div>
    {{#master}}
        <a class="btn btn-outline-secondary float-right mr-4" href="/books/booksave">책 등록</a>
    {{/master}}
    {{^master}}
    {{/master}}
</div>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            {{#bookInfo}}
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="card-text">{{bookName}}</h4>
                            <small class="card-text">{{bookAuthor}}</small>
                        </div>
                        <div class="mb-2 d-flex align-items-center flex-row-reverse">
                            <h5 class="card-text mr-2 float-right">
                                {{bookPrice}}원
                            </h5>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" onclick="location.href='/books/bookdetail?uid={{uid}}'" class="btn btn-sm btn-outline-secondary">상세보기</button>
                                <button type="button" onclick="location.href='/books/bookupdate?uid={{uid}}'" class="btn btn-sm btn-outline-secondary">수정</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/bookInfo}}
        </div>
    </div>
</div>
{{>layout/footer}}