{{>layout/header}}
{{>layout/nav}}
<div>
    <a class="btn btn-outline-secondary float-right mr-4" href="/books/booksave">책 등록</a>
</div>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            {{#bookInfo}}
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="card-text">{{bookName}}</h4>
                            <small class="card-text">{{bookAuthor}}</small>
                        </div>
                        <div class="mb-2 d-flex align-items-center flex-row-reverse">
                            <h5 class="card-text mr-2 float-right">
                                {{bookPrice}}원
                            </h5>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" onclick="location.href='/books/bookdetail/{{uid}}'" class="btn btn-sm btn-outline-secondary">View</button>
                                <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/bookInfo}}
        </div>
    </div>
</div>
{{>layout/footer}}