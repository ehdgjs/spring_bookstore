{{>layout/header}}
{{>layout/nav}}
<h1>{{userid}}님 환영합니다.</h1>

<div class="col-lg-6" id="cardDiv">
    <h2>카드 목록</h2>
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>카드회사</th>
                <th>카드번호</th>
                <th>유효기간</th>
            </tr>
            </thead>
            <tbody>
            {{#cardInfo}}
            <tr>
                <td>{{type}}</td>
                <td>{{id}}</td>
                <td>{{datetime}}</td>
            </tr>
            {{/cardInfo}}
            </tbody>
        </table>
    <p><a class="btn btn-secondary" id="btn-cardadd" role="button">카드 추가 »</a></p>
    <div id="container-card"></div>
</div>
<div class="col-lg-6" id="shipDiv">
    <h2>배송지 목록</h2>
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th>우편번호</th>
            <th>기본주소</th>
            <th>상세주소</th>
        </tr>
        </thead>
        <tbody>
        {{#addrInfo}}
            <tr>
                <td>{{shippingNum}}</td>
                <td>{{basicAddr}}</td>
                <td>{{detailAddr}}</td>
            </tr>
        {{/addrInfo}}
        </tbody>
    </table>
    <p><a class="btn btn-secondary" id="btn-shipadd" role="button">배송지 추가 »</a></p>
    <div id="container-addr"></div>
</div>
{{>layout/footer}}