{{>layout/header}}
{{>layout/nav}}
<div class="container">
    <div class="col-md-12">
        <h1 class="mb-4">{{userid}}님 환영합니다.</h1>
        <div class="row">
            <div class="col-md-6" id="cardDiv">
                <h2>카드 목록</h2>
                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th>카드회사</th>
                        <th>카드번호</th>
                        <th>유효기간</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#cardInfo}}
                        <tr>
                            <td>{{type}}</td>
                            <td>{{id}}</td>
                            <td>{{datetime}}</td>
                            <form method="post" action="/users/deleteCard/{{id}}">
                                <td><input type="submit" class="btn btn-outline-danger" value="삭제"/></td>
                            </form>
                        </tr>
                    {{/cardInfo}}
                    </tbody>
                </table>
                <p><a class="btn btn-outline-secondary" id="btn-cardadd" role="button">카드 추가 »</a></p>
                <div id="container-card"></div>
            </div>
            <div class="col-md-6" id="shipDiv">
                <h2>배송지 목록</h2>
                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th>우편번호</th>
                        <th>기본주소</th>
                        <th>상세주소</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#addrInfo}}
                        <tr>
                            <td>{{shippingNum}}</td>
                            <td>{{basicAddr}}</td>
                            <td>{{detailAddr}}</td>
                            <form method="post" action="/users/deleteAddr/{{uid}}">
                                <td><input type="submit" class="btn btn-outline-danger" value="삭제"/></td>
                            </form>
                        </tr>
                    {{/addrInfo}}
                    </tbody>
                </table>
                <p><a class="btn btn-outline-secondary" id="btn-shipadd" role="button">배송지 추가 »</a></p>
                <div id="container-addr"></div>
            </div>
        </div>
        <table class="table table-hover table-bordered text-center">
            <thead>
                <th>주문 날짜</th>
                <th>배송지</th>
                <th>가격</th>
            </thead>
            <tbody>
                {{#orderInfo}}
                <tr>
                    <td>{{orderDate}}</td>
                    <td>{{address}}</td>
                    <td>{{price}}</td>
                </tr>
                {{/orderInfo}}
            </tbody>
        </table>
    </div>
</div>
{{>layout/footer}}